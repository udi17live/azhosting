<section id="pricing" class="pricing-section-five pt-100 pb-70">
    <div class="container">
        <div class="section-title section-title-two">
            <h2>Price & plans</h2>
        </div>
        <div class="row">
            <% vpsCloudHostingPlans.forEach((vpsCloudHostingPlan, index)=> { %>
                <div class="col-sm-12 col-md-4">
                    <div class="pricing-item pricing-item-two">
                        <div class="pricing-secondary-header">
                            <div class="pricing-header-title">
                                <h3 class="pricing-header-title-text">
                                    <%= vpsCloudHostingPlan.name %>
                                </h3>
                            </div>
                            <div class="pricing-item-amount">
                                <h4 class="pricing-item-amount-number"><small>$</small>
                                    <%= vpsCloudHostingPlan.cost %><span>/Month</span>
                                </h4>
                            </div>
                        </div>
                        <div class="pricing-item-body">
                            <ul class="pricing-body-list pricing-body-list-two">
                                <li><%= vpsCloudHostingPlan.features.cores %></li>
                                <li><%= vpsCloudHostingPlan.features.ram %></li>
                                <li><%= vpsCloudHostingPlan.features.diskspace %></li>
                                <li><%= vpsCloudHostingPlan.features.bandwidth %></li>
                                <li><%= vpsCloudHostingPlan.features.dedicatedIp %> Dedicated IP</li>
                            </ul>
                            <a href="<%= billingURL %>" class="btn btn-gradient">Order Now</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
</section>


